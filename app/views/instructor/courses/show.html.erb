<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= link_to 'preview as a student', course_path(@course), class: 'btn btn-info float-right' %>
  <br class="clr" />
  <br />
  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-info' %>
  </div>
  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-info' %>
        <ul>
          <% section.lessons.each do |lesson| %>
          <li>
            <b><%= lesson.title %></b>
            -
            <%= lesson.subtitle %>
          </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
 </div>