<script>    
        $(function() {
          

          $('.new-lesson-button').click(function( event ) {
            var lessonUrl = $(event.target).data('lesson-url');
            $('#newLessonForm').attr('action', lessonUrl);
          });
      
          $('.lessons').sortable({
            update: function( event, ui ) {
              $.ajax({
                type: 'PUT',
                url: ui.item.data('update-url'),
                dataType: 'json',
                data: { lesson: { row_order_position: ui.item.index()}}
              });
            }

          });

          $('.sections').sortable({
            update: function(event, ui ) {
              $.ajax({
                type: 'PUT',
                url: ui.item.data('update-url'),
                dataType: 'json',
                data: { section: { row_order_position: ui.item.index()}}
              });
            }

          });
        });
  </script>
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
    <%= image_tag @course.image, class: 'img-fluid' %>
  

  <br />
  <%= link_to 'preview as a student', course_path(current_course), class: 'btn btn-danger btn-sm float-right' %>
  <br class="clr" />
  <br />
  <div>
    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#newSectionModal"> + Section</button>
  </div>
  <ul class="sections">
    <% current_course.sections.rank(:row_order).each do |section| %>
      <br />
      <li class="booyah-box-section", data-update-url="<%= instructor_section_path(section) %>">
        <div class="header">
          <span class="fa fa-ellipsis">here is the section elipse</span>
          
          <%= section.title %>
        </div>
          <button type="button" class="btn btn-info btn-sm float-right new-lesson-button" data-toggle="modal" data-target="#newLessonModal" data-lesson-url="<%= instructor_section_lessons_path(section) %>">
            + Lesson
          </button>
        <br />
        <ul class="lessons">
          <% section.lessons.rank(:row_order).each do |lesson| %>
          <!-- begin box -->
             <br />
            <li class="booyah-box-lesson", data-update-url="<%= instructor_lesson_path(lesson) %>">
              <div class="row">
                <div class="col-1">
                  <span class="fa fa-ellipsis-v">elipse</span>
                </div>
                <div class="col-11 text-center">
                  <p>
                    <b><%= lesson.title %></b>
                  </p>
                  <p>
                    <%= lesson.subtitle %>
                  </p>
                </div>
              </div>
              <br class="clr"/>
            </li>
           
          <!-- end box -->
          <% end %>

        </ul>
      </li>
    <% end %>
  </ul>
 </div>
 <br class="clr" />
 <br />
 <br />

<!-- Modal to add new section-->
<div class="modal fade" id="newSectionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="newSectionModalLabel">+ Section</h4>
      </div>
        <%= simple_form_for @section, url: instructor_course_sections_path(current_course) do |f| %>
          <div class="modal-body">
            <%= f.input :title %>
            <br /> 
          </div>
          <div class="modal-footer">
            <%= f.submit "Add a section", class: 'btn btn-info btn-sm' %>
            <button type="button" class="btn btn-info btn-sm" data-dismiss="modal">Close</button>
          </div>
        <% end %>
     </div>
  </div>
</div>
<!-- end of modal to add section -->

<!-- begin of Modal add lesson-->
<div class="modal fade" id="newLessonModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="newLessonModalLabel">Add a New Lesson</h4>
      </div>
        <br />
        <div class="booyah-box col-10 offset-1">
          <%= simple_form_for @lesson, url: "#", html: {id: 'newLessonForm'} do |f| %>
            <div class="modal-body">
              <%= f.input :title %>
              <%= f.input :subtitle %>
              <%= f.input :video %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-info btn-sm" data-dismiss="modal">Close</button>
              <%= f.submit "Add the lesson", class: 'btn btn-info btn-sm' %>
            </div>
          <% end %>
        </div>
        <br />
        <br />
      </div>
    </div>
  </div>
</div>