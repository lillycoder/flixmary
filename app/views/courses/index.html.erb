<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <p class="text-center">Here are the courses currently being offered</p>
  <hr class="hr_item2"/>

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h2>
    <br />
    <br />
         <%= image_tag course.image.url, class: 'img-fluid' %>
     
    <br />
    <div> - </div>
    <div class="row">

      <div class="col-sm-8 col-12">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <%= link_to 'More Details', course_path(course), class: 'btn btn-info' %>
      </div>
     
    </div>
    <hr class="hr_item">
    <br class="clr" />
  <% end %>
</div>
